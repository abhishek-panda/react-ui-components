{
    "compilerOptions": {
      "strict": true,
      "outDir": "lib",
      "module": "commonjs",
      "target": "es5",
      "types": ["react", "jest"],
      "lib": ["es5", "es6", "es7", "es2017", "dom", "ESNext"],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDirs": ["components"],
      "baseUrl": "./",
      "paths": {
        "utils/*": ["components/utils/*"]
      },
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types"
      ],
    },
    "include": ["components/**/*"],
    "exclude": ["node_modules", "lib", "scripts", "components/**/*.test.tsx"]
}
